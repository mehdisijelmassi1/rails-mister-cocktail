<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10">
      <h1>All cocktails</h1>
        <ul>
          <% @cocktails.each do |cocktail| %>
            <li> <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
          <% end %>
        </ul>
      <%= link_to "Create your cocktail", new_cocktail_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
